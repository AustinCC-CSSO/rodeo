{
	"name": "rodeo",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "npx prisma generate && npx prisma migrate deploy && vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"database": "prisma migrate diff --from-schema-datasource ./prisma/schema.prisma --to-schema-datamodel ./prisma/schema.prisma --exit-code"
	},
	"pre-commit": [
		"check",
		"lint"
	],
	"prisma": {
		"seed": "node --loader ts-node/esm --experimental-specifier-resolution=node prisma/seed.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/adapter-vercel": "^1.0.5",
		"@sveltejs/kit": "^1.0.0",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"pre-commit": "^1.2.2",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "^4.7.1",
		"@sendgrid/mail": "^7.7.0",
		"@trpc/client": "^10.7.0",
		"@trpc/server": "^10.7.0",
		"fuzzysort": "^2.0.4",
		"prisma": "^4.7.1",
		"trpc-sveltekit": "^3.2.2",
		"zod": "^3.20.2"
	}
}
