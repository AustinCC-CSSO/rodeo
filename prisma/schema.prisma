datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  magicLink String  @unique
  role      Role    @default(HACKER)
  name      String?
  major     String?
}

model Announcement {
  id        Int      @id @default(autoincrement())
  body      String
  published DateTime @default(now())
}

enum Role {
  HACKER
  ADMIN
}
