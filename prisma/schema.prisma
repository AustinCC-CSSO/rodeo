datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  magicLink   String   @unique
  role        Role     @default(HACKER)
}

model Announcement {
  id          Int      @id @default(autoincrement())
  title       String
  body        String
  published   DateTime @default(now())
}

enum Role {
  HACKER
  ADMIN
}
